#MSI_SETUP_FILE must be set to the msi file that is created by VC++

dist-msi: 
	@if test -f "$(MSI_SETUP_FILE)"; then \
		cp "$(MSI_SETUP_FILE)" @PACKAGE@-@VERSION@.msi; \
	else \
	  	echo "the msi file ($(MSI_SETUP_FILE)) must be (re)created"; \
		echo "by building it with VC++7"; \
	fi


EXTRA_BIN_DISTS += msi
UPLOAD_BIN += upload-msi
UPLOAD_TARGETS += \
{msi=>@PACKAGE@-@VERSION@.msi}
