	lib/salt/salt.h, lib/salt/rect.h, lib/salt/quadlink.h, 
	lib/salt/ptrmanager.h, lib/salt/ptr.h, lib/salt/plane.h,
	lib/salt/plane.cpp, lib/salt/path.h, lib/salt/path.cpp, 
	lib/salt/matrix.h, lib/salt/frustum.h:
