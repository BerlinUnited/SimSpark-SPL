; -*- mode: lisp; -*-
;
; create a field line from ($BegX $BegY) to ($EndX $EndY)
;

(RSG 0 1)
(
 (templ $BegX $BegY $EndX $EndY)

 (nd Transform
     (nd Line
	 (setBeginPoint $BegX $BegY 0)
	 (setEndPoint $EndX $EndY 0)
	 )
     )

