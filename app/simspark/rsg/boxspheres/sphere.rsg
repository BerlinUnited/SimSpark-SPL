; -*- mode: lisp; -*-

(RubySceneGraph 0 1)
(
 (template $radius $density $material)

 (node Sphere
       (setRadius $radius)
       (setMaterial $material)
       )

 (node Body
       (setName sphereBody)
       (setSphere $density $radius)
       (node DragController
	     (setAngularDrag 0.2)
	     (setLinearDrag 0.4)
	     )
)
       
 (node SphereCollider
       (setRadius $radius)

       (node ContactJointHandler
	     (setContactBounceMode false)
	     )

       ) 
 )
