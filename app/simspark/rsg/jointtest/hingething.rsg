; -*- mode: lisp; -*-

(RubySceneGraph 0 1)
(
 (node Transform
       (setName mid)
       (setLocalPos 0 0 0)
       (importScene rsg/boxspheres/box.rsg 8 1 2 2 matYellow)
       )

 (node Transform
       (setName right)
       (setLocalPos 4.6 0 0)
       (importScene rsg/boxspheres/box.rsg 1 3 5.5 2 matBlue)
       )

 (node Transform
       (setName left)
       (setLocalPos -4.6 0 0)
       (importScene rsg/boxspheres/box.rsg 1 3 5 2 matRed)
       )

 (node HingeJoint
       (attach ../mid/boxBody ../right/boxBody)
       (setAnchor 3 0 0)
       )

 (node HingeJoint
       (attach ../mid/boxBody ../left/boxBody)
       (setAnchor -3 0 0)
       )
 )