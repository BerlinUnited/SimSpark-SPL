; -*- mode: lisp; -*-

(RubySceneGraph 0 1)
(
 (node Ball
       (setLocalPos 0 0 30)
       (setName Ball)

       (node Sphere
	     (setRadius 1.0)
	     (setMaterial matWhite)
	     )

       (node Body
	     (setName physics)
	     (setSphere 2 1.0)
	     (node DragController
		   (setAngularDrag 0.2)
		   (setLinearDrag 0.4)
		   )
	     )
       
       (node SphereCollider
	     (setName geometry)
	     (setRadius 1.0)

	     (node ContactJointHandler
		   (setContactBounceMode false)

		   (setContactSlipMode true)
		   (setContactSlip 0.1 0.1)

		   (setContactSoftERPMode true)
		   (setContactSoftERP 0.5)

		   (setContactSoftCFM true)
		   (setContactSoftCFM 0.3)
		   )
	     )


       (node ObjectState
	     (setPerceptName Ball)
	     )
       )
 )